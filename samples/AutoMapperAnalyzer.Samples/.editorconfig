# EditorConfig for AutoMapper Analyzer Samples
# Keep diagnostics visible (warning-level) so the sample project demonstrates
# analyzer output while still compiling successfully.

root = true

[*.cs]
# AutoMapper Analyzer Rules - set implemented rules to warning severity.

# Type Safety (AM001-AM003)
dotnet_diagnostic.AM001.severity = warning # Property Type Mismatch
dotnet_diagnostic.AM002.severity = warning # Nullable Compatibility
dotnet_diagnostic.AM003.severity = warning # Collection Type Incompatibility

# Property Mapping (AM004-AM006, AM011)
dotnet_diagnostic.AM004.severity = warning # Missing Destination Property
dotnet_diagnostic.AM005.severity = warning # Case Sensitivity Mismatch
dotnet_diagnostic.AM006.severity = warning # Unmapped Destination Property
dotnet_diagnostic.AM011.severity = warning # Unmapped Required Property

# Complex Types (AM020-AM022)
dotnet_diagnostic.AM020.severity = warning # Nested Object Mapping Missing
dotnet_diagnostic.AM021.severity = warning # Collection Element Mismatch
dotnet_diagnostic.AM022.severity = warning # Infinite Recursion Risk

# Custom Converters (AM030)
dotnet_diagnostic.AM030.severity = warning # Custom Type Converter Issues

# Additional rules reserved for future implementations.
dotnet_diagnostic.AM031.severity = warning # Performance Analysis
dotnet_diagnostic.AM040.severity = warning # Missing Profile Registration
dotnet_diagnostic.AM041.severity = warning # Conflicting Mapping Rules
dotnet_diagnostic.AM042.severity = warning # Ignore vs MapFrom Conflict
dotnet_diagnostic.AM050.severity = warning # Redundant MapFrom Configuration
dotnet_diagnostic.AM051.severity = warning # Repeated Mapping Configuration
dotnet_diagnostic.AM052.severity = warning # Missing Null Propagation

# Suppress CS warnings that are expected in sample code
dotnet_diagnostic.CS8618.severity = none # Non-nullable field uninitialized
dotnet_diagnostic.CS8602.severity = none # Dereference of possibly null reference
dotnet_diagnostic.CS8604.severity = none # Possible null reference argument
dotnet_diagnostic.CA1822.severity = none # Mark members as static
dotnet_diagnostic.CA1305.severity = none # Specify IFormatProvider
